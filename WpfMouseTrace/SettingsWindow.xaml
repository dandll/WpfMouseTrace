<Window x:Class="WpfMouseTrace.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMouseTrace"
        xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
        mc:Ignorable="d"
        Title="设置" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/favicon(1).ico" Closing="Window_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="最大痕迹数量:" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Slider x:Name="MaxTrailLengthSlider" 
                    Width="200" 
                    Minimum="1" 
                    Maximum="100" 
                    TickFrequency="1" 
                    IsSnapToTickEnabled="True"
                    Value="{Binding MaxTrailLength, Mode=TwoWay}" ValueChanged="MaxTrailLengthSlider_ValueChanged" />
            <TextBlock Text="{Binding ElementName=MaxTrailLengthSlider, Path=Value, StringFormat={}{0:F0}}" 
                       Width="40" 
                       Margin="10,0,0,0" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="痕迹颜色:" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,20">
            <Border x:Name="ColorPreviewBorder"
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    Width="80" 
                    Height="30" 
                    Cursor="Hand"
                    MouseLeftButtonUp="ColorPreviewBorder_MouseLeftButtonUp">
                <Border.Background>
                    <SolidColorBrush Color="{Binding TrailColor}"/>
                </Border.Background>
            </Border>
            <TextBlock Text="点击选择颜色" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0"
                       Foreground="Gray"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="确定" Width="80" Height="25" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="取消" Width="80" Height="25" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
